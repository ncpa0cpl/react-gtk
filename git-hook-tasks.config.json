{
  "packageManager": "yarn",
  "parallel": true,
  "parallelPoolSize": 4,
  "hooks": {
    "pre-push": [
      {
        "name": "ESLint",
        "script": "test:lint"
      },
      {
        "name": "Prettier",
        "script": "test:prettier"
      },
      {
        "name": "Unit Tests",
        "script": "test:unit"
      }
    ],
    "pre-commit": [],
    "post-commit": []
  }
}