{
  "packageManager": "yarn",
  "parallel": true,
  "parallelPoolSize": 4,
  "hooks": {
    "pre-push": [
      {
        "name": "Type Check",
        "script": "test:tsc"
      },
      {
        "name": "Lint",
        "script": "test:lint"
      },
      {
        "name": "Formatting",
        "script": "test:fmt"
      },
      {
        "name": "Unit Tests",
        "script": "test:unit"
      }
    ],
    "pre-commit": [],
    "post-commit": []
  }
}